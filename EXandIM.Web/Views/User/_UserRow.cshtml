@using EXandIM.Web.Core
@model UserViewModel

<tr>
    <td style="text-align:start">@Model.FullName</td>
    <td style="text-align:center">@Model.UserName</td>
    <td style="text-align:center">@Model.Circle</td>
    <td style="text-align:center">@Model.Team</td>
    @if (User.IsInRole(AppRoles.SuperAdmin))
    {
        <td style="text-align:center">@Model.Password</td>
    }
    <td style="text-align:center">
        <span class="badge badge-light-@(Model.IsDeleted ? "danger" : "success") js-status">
            @(Model.IsDeleted ? "محظور" : "متاح")
        </span>
    </td>
    <td style="text-align:end">
        <a href="#" class="btn btn-light btn-active-light-primary btn-sm" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
            اعدادات اخرى
            <!--begin::Svg Icon | path: icons/duotune/arrows/arr072.svg-->
            <span class="svg-icon svg-icon-5 m-0">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M11.4343 12.7344L7.25 8.55005C6.83579 8.13583 6.16421 8.13584 5.75 8.55005C5.33579 8.96426 5.33579 9.63583 5.75 10.05L11.2929 15.5929C11.6834 15.9835 12.3166 15.9835 12.7071 15.5929L18.25 10.05C18.6642 9.63584 18.6642 8.96426 18.25 8.55005C17.8358 8.13584 17.1642 8.13584 16.75 8.55005L12.5657 12.7344C12.2533 13.0468 11.7467 13.0468 11.4343 12.7344Z" fill="currentColor"></path>
                </svg>
            </span>
            <!--end::Svg Icon-->
        </a>
        <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-800 menu-state-bg-light-primary fw-semibold w-200px py-3" data-kt-menu="true" style="">
            <!--begin::Menu item-->
            <div class="menu-item px-3">
                <a asp-action="Edit" asp-controller="User" asp-route-id="@Model.Id" class="menu-link px-3"
                   data-title="Edit User" data-url="/User/Edit/@Model.Id"
                   data-update="true">
                    تعديل
                </a>
            </div>
            <!--end::Menu item-->
            <!--begin::Menu item-->
            <div class="menu-item px-3">
                <a href="javascript:;" class="menu-link flex-stack px-3 js-toggle-status"
                   data-url="/User/ToggleStatus/@Model.Id" data-message="هل متأكد من تغير حاله المستخدم؟">
                    حاله الحساب
                </a>
            </div>
            <!--end::Menu item-->
            <!--begin::Menu item-->
            <div class="menu-item px-3">
                <a href="javascript:;" class="menu-link flex-stack px-3 js-render-modal"
                   data-title="اعاده تعين كلمه المرور" data-url="/User/ResetPassword/@Model.Id"
                   data-update="true">
                    اعاده تعين كلمه المرور
                </a>
            </div>
            <!--end::Menu item-->
            @if (User.IsInRole(AppRoles.SuperAdmin))
            {
                <!--begin::Menu item-->
                <div class="menu-item px-3">
                    <a href="/User/EditPermissions/@Model.Id" class="menu-link flex-stack px-3">
                        تعديل الصلاحيات
                    </a>
                </div>
                <!--end::Menu item-->
            }
        </div>
    </td>
</tr>