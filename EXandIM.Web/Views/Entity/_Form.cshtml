@model EntityFormViewModel


<form asp-action="@(Model?.Id > 0 ? "Edit" : "Create")"
      data-ajax-method="post"
      data-ajax="true"
      data-ajax-begin="onModalBegin"
      data-ajax-success="onModalSuccess"
      data-ajax-failure="showErrorMessage"
      data-ajax-complete="onModalComplete">
    @if (Model?.Id > 0)
    {
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="IsInside" />
    }

    <div class="d-flex flex-column mb-8 fv-row fv-plugins-icon-container">
        <!--begin::Label-->
        <label class="d-flex align-items-center fs-6 fw-semibold mb-2">
            <span class="required">الجهة</span>
        </label>
        <!--end::Label-->
        <!--begin::Row-->
        <div class="row">
            <!--begin::Col-->
            <div class="fv-row fv-plugins-icon-container fv-plugins-bootstrap5-row-invalid">
                <input type="text" class="form-control" placeholder="الجهة" asp-for="Name" />
                <span asp-validation-for="Name" class="text-danger d-block"></span>
            </div>
            <!--end::Col-->
        </div>
        <!--end::Row-->
    </div>

    @if (Model?.Id > 0){}       
    else{
        <div class="mb-5">
            <div class="mb-2">
                <label asp-for="IsInside" class="form-check form-switch form-check-custom form-check-solid" style="margin-right: 20px; margin-bottom: 20px;">
                    <span class="form-check-label fw-semibold">
                        هل الجهه داخليه؟
                    </span>
                    <input asp-for="IsInside" class="form-check-input" type="checkbox" style="height: 20px;">
                </label>
            </div>
        </div>
    }

    <partial name="_ModalFooter" />
</form>
