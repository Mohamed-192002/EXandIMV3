@model EntityViewModel
<tr>
    <td>@Model.Name</td>
    <td style="text-align:center">
        <span class="badge badge-light-@(!Model.IsInside ? "warning" : "success")">
            @(!Model.IsInside ? "جهه خارجيه" : "جهه داخليه")
        </span>
    </td>
    <td style="text-align:center">
        <a href="javascript:;" class="btn btn-sm btn-outline btn-outline-dashed btn-outline-primary btn-active-light-primary js-render-modal"
           data-title="تعديل الجهه" data-url="/Entity/Edit/@Model.Id" data-update="true">
            تعديل الجهه
        </a>
    </td>
    <td style="text-align:end">
        <a href="javascript:;" class="btn btn-sm btn-outline btn-outline-dashed btn-outline-danger btn-active-light-danger js-confirm"
           data-title="حذف الجهه" data-url="/Entity/Delete/@Model.Id" data-update="true" data-message="هل متأكد من حذف هذه الجهه؟">
            حذف الجهه
        </a>
    </td>
</tr>