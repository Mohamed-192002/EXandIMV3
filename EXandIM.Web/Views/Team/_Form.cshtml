@model TeamFormViewModel


<form asp-action="@(Model?.Id > 0 ? "Edit" : "Create")"
      data-ajax-method="post"
      data-ajax="true"
      data-ajax-begin="onModalBegin"
      data-ajax-success="onModalSuccess"
      data-ajax-failure="showErrorMessage"
      data-ajax-complete="onModalComplete">
    @if (Model?.Id > 0)
    {
        <input type="hidden" asp-for="Id" />
    }
    <div class="mb-5">
        <div class="form-floating mb-2">
            <select style="height: 60px;" class="form-select form-select-solid js-select2" data-placeholder="اختار جهه" asp-for="CircleId" asp-items="@Model.Circles">
                <option value="">اختار دائره</option>
            </select>
            <label asp-for="CircleId"></label>
        </div>
        <span asp-validation-for="CircleId" class="text-danger d-block"></span>
    </div>
    <div class="mb-5">
        <div class="form-floating mb-2">
            <input type="text" class="form-control" placeholder="Name" asp-for="Name" />
            <label style="margin-right:30px" asp-for="Name"></label>
        </div>
        <span asp-validation-for="Name" class="text-danger d-block"></span>
    </div>

    <div class="mb-5">
        <div class="mb-2">
            <label asp-for="AcceptArchive" class="form-check form-switch form-check-custom form-check-solid" style="margin-right: 20px; margin-bottom: 20px;">
                <span class="form-check-label fw-semibold">
                    يمكنه استلام الوارد من خارج الدائره؟
                </span>
                <input asp-for="AcceptArchive" class="form-check-input" type="checkbox" style="height: 20px;">
            </label>
        </div>
    </div>
  
    <partial name="_ModalFooter" />
</form>
